<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.NoteHive" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundColor">@color/black</item>
        <item name="noteBackground">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="textColorDarker">@color/dark_grey</item>
        <item name="secondaryTextColor">@color/grey</item>
        <item name="cardBackgroundColor">@color/dark_grey</item>
    </style>

    <style name="Theme.NoteHive.Light" parent="Base.Theme.NoteHive">
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.NoteHive.Dark" parent="Base.Theme.NoteHive">
        <item name="backgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.NoteHive.Green" parent="Base.Theme.NoteHive">
        <item name="backgroundColor">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>